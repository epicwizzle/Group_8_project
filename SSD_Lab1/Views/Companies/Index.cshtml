@model IEnumerable<SSD_Lab1.Models.Company>

@{
    ViewData["Title"] = "Companies";
}

<h1>Companies</h1>

@if (User.IsInRole("Supervisor"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.YearsInBusiness)</th>
            <th>@Html.DisplayNameFor(model => model.Website)</th>
            <th>@Html.DisplayNameFor(model => model.Province)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.YearsInBusiness)</td>
                <td><a href="@item.Website" target="_blank">@Html.DisplayFor(modelItem => item.Website)</a></td>
                <td>@Html.DisplayFor(modelItem => item.Province)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    @if (User.IsInRole("Supervisor"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
